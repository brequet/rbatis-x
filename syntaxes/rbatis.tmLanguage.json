{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "text.xml.rbatis",
    "patterns": [
        {
            "include": "#rbatis-sql-injection"
        },
        {
            "include": "text.xml"
        }
    ],
    "repository": {
        "rbatis-sql-injection": {
            "comment": "Injects SQL into rbatis data manipulation tags, layering over the base XML.",
            "begin": "(?i)(<(select|insert|update|delete|sql)\\b[^>]*>)",
            "end": "(?i)(</\\2>)",
            "beginCaptures": {
                "0": {
                    "patterns": [
                        {
                            "include": "text.xml"
                        }
                    ]
                }
            },
            "endCaptures": {
                "0": {
                    "patterns": [
                        {
                            "include": "text.xml"
                        }
                    ]
                }
            },
            "contentName": "source.sql.embedded.rbatis",
            "patterns": [
                {
                    "comment": "Capture rbatis control tags so the SQL parser ignores them, but highlight them as XML.",
                    "match": "(?i)</?(include|if|choose|when|otherwise|trim|where|set|foreach|bind|continue|break)\\b[^>]*>",
                    "name": "meta.tag.xml"
                },
                {
                    "comment": "Highlight rbatis parameter placeholders.",
                    "name": "variable.parameter.sql.rbatis",
                    "match": "#\\{[^\\}]*\\}"
                },
                {
                    "comment": "Finally, apply the standard SQL grammar to the remaining content.",
                    "include": "source.sql"
                }
            ]
        }
    }
}